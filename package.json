{
  "name": "lazy-base-template-vue3",
  "description": "一个挤牙膏式的后台管理模板，基于 `Vue3、Vite4、Pinia、Unocss 和 Naive UI` 等前端技术栈",
  "author": "Allen Li",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "dev:server": "json-server ./server/db.json",
    "build": "vite build",
    "build:test": "vite build --mode test",
    "lint": "eslint --ext .js,.vue .",
    "lint:fix": "eslint --fix --ext .js,.vue .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "preview": "vite preview",
    "up": "taze major -I"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --ext .js,.vue ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "eslintConfig": {
    "extends": [
      "@zclzone",
      "@unocss",
      ".eslint-global-variables.json"
    ]
  },
  "dependencies": {
    "@vueuse/core": "^10.4.1",
    "@wangeditor/editor": "^5.1.23",
    "@wangeditor/editor-for-vue": "5.1.12",
    "axios": "^1.4.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "highlight.js": "^11.8.0",
    "jsencrypt": "^3.0.1",
    "md-editor-v3": "^4.7.0",
    "mockjs": "^1.1.0",
    "pinia": "^2.1.4",
    "pinia-plugin-persistedstate": "^3.1.0",
    "qs": "^6.11.2",
    "tools-javascript": "^1.0.14",
    "tools-vue3": "^1.0.48",
    "vue": "^3.3.4",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.5",
    "xe-utils": "^3.5.11",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.80",
    "@iconify/vue": "^4.1.1",
    "@unocss/eslint-config": "^0.57.1",
    "@unocss/preset-mini": "^0.57.1",
    "@unocss/preset-rem-to-px": "^0.55.7",
    "@unocss/reset": "^0.57.1",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@zclzone/eslint-config": "^0.0.5",
    "concurrently": "^8.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "json-server": "^0.17.3",
    "lint-staged": "^14.0.1",
    "naive-ui": "^2.35.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.63.4",
    "taze": "^0.8.5",
    "unocss": "^0.57.1",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.11",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-mock": "2.9.6",
    "vite-plugin-svg-icons": "^2.0.1"
  }
}
